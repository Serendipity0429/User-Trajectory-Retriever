{
  "name": "Alpha-UTRT: THUIR User Trajectory Retriever Toolkit",
  "version": "4.0",
  "manifest_version": 3,
  "description": "This extension records user interactions for academic research, allowing for replay and analysis of web trajectories.",
  "icons": {
    "16": "popup/THUIR16.png",
    "32": "popup/THUIR32.png",
    "64": "popup/THUIR64.png",
    "128": "popup/THUIR128.png"
  },
  "action": {
    "default_title": "THUIR Chrome Extension",
    "default_icon": "popup/THUIR19.png",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "storage",
    "cookies",
    "notifications",
    "scripting",
    "alarms",
    "contextMenus",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://127.0.0.1:8000/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src http://127.0.0.1:8000 http://localhost:8000;"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "http://0.0.0.0/*",
        "https://0.0.0.0/*"
      ],
      "js": [
        "bypass.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "http://0.0.0.0/*",
        "https://0.0.0.0/*"
      ],
      "js": [
        "scripts/rrweb.min.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "http://0.0.0.0/*",
        "https://0.0.0.0/*"
      ],
      "js": [
        "config.js",
        "utils.js",
        "page.js",
        "mouseMove.js",
        "message.js",
        "ui_annotation.js",
        "general.js",
        "content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*"
      ],
      "js": ["close_helper.js"],
      "run_at": "document_start"
    }
  ]
}
