# .env.example - Rename this file to .env and fill in the values.
# This file should be in the same directory as manage.py

# SECURITY WARNING: Do not commit the .env file to version control.
# It should be listed in your .gitignore file.

# -- Server Configuration --
# The secret key for Django application.
DJANGO_SECRET_KEY=your-django-secret-key

# Set to True to run the Gunicorn server in production mode.
# Set to True to run the Django development server.
DJANGO_DEBUG=True

# Set to True to use the remote bind address.
# Set to False to use the local bind address.
REMOTE=False

# The address for local development (used when REMOTE=False).
BIND_ADDRESS_LOCAL=127.0.0.1:8000

# The address for remote access (used when REMOTE=True).
BIND_ADDRESS_REMOTE=0.0.0.0:8000

# -- Admin User --
ADMIN_USERNAME=admin


# -- Email Configuration (for password resets, etc.) --
# Replace with your actual SMTP server details.
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# -- Application URL --

# The base URL where the application is hosted.

IP_TO_LAUNCH=http://127.0.0.1:8000/

# -- LLM as a Judge --
LLM_BASE_URL=your-llm-base-url
LLM_API_KEY=your-llm-api-key
LLM_MODEL=gpt-4o
LLM_JUDGE_MODEL=gpt-4o

# -- Embedding Model (for long-term memory) --
# Uses LLM_API_KEY and LLM_BASE_URL for authentication
EMBEDDING_MODEL=text-embedding-3-small

# -- Serper Search API --
SERPER_API_KEY=your-serper-api-key

# -- Redis Configuration --
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
# -- PostgreSQL Configuration --
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
# -- Database Configuration --
DATABASE_TYPE=sqlite
